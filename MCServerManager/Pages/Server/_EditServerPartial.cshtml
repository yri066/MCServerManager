@using MCServerManager.Models
@model ServerDetail

<div class="form-group">
    <label asp-for="Address" class="col-md-12 control-label"></label>
    <div class="col-md-12">
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="Port" class="col-md-12 control-label"></label>
    <label class="text-muted">Стандартный порт для Minecraft: 25565 – Java Edition, 19132-19133 – Bedrock Edition</label>
    <div class="col-md-12">
        <input asp-for="Port" class="form-control" />
        <span asp-validation-for="Port" class="text-danger"></span>
    </div>
</div>