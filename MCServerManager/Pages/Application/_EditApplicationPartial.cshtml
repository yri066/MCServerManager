@using MCServerManager.Models
@model ApplicationDetail

<div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="mb-3">
    <div class="checkbox">
        <label class="col-md-12 control-label">
            <input asp-for="AutoStart" /> Автозапуск
            <span asp-validation-for="AutoStart" class="text-danger"></span>
        </label>
    </div>
</div>
<div class="mb-2">
    <label asp-for="WorkDirectory" class="form-label"></label>
    <input asp-for="WorkDirectory" class="form-control" />
    <span asp-validation-for="WorkDirectory" class="text-danger"></span>
</div>
<div class="mb-2">
    <label asp-for="StartProgram" class="form-label"></label>
    <input asp-for="StartProgram" class="form-control" />
    <span asp-validation-for="StartProgram" class="text-danger"></span>
    <div class="form-text">Пример: java или C:\App\Programm.exe</div>
</div>
<div class="mb-2">
    <label asp-for="Arguments" class="form-label"></label>
    <input asp-for="Arguments" class="form-control" />
    <span asp-validation-for="Arguments" class="text-danger"></span>
    <div class="form-text">Пример: -Xmx1024M -Xms1024M -jar server.jar nogui</div>
</div>